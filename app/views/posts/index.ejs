<h2>Available posts</h2>
<% for(let m in messages) { %>
    <div class="alert alert-<%= m %>" role="alert">
      <%= messages[m] %>
    </div>
<% } %>
<% if(locals.posts){ %>
  <% for(let p of posts){ %>
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title"><%= p.title %> <span class="badge badge-secondary"><%= p.comments.length %> comments</span></h5>
        <p class="card-text"><%= p.summary %></p>


        <ul class="list-inline">
          <li class="list-inline-item">Created at <%= formatDate(p.posted_at, "MM/DD/YYYY h:m a") %></li>
          <li class="list-inline-item">Last update at <%= formatDate(p.updated_at, "MM/DD/YYYY h:m a") %></li>
        </ul>
        <form action="/posts/<%= p._id %>/delete" method="post">
          <a href="/posts/<%= p._id %>" class="btn btn-primary">Read more</a>
          <a href="/posts/<%= p._id %>/edit" class="btn btn-success">Edit</a>
    
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  <% } %>
<% } %>