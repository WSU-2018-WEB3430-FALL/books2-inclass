    <h1>Edit a post</h1>
     <form action="/posts/<%= post._id %>/update" method="post">
      <div class="form-group">
        <label for="post_title">Title</label>
        <input type="text" class="form-control" name="title" id="post_title"
        value="<%= post.title %>">
      </div>
        <div class="form-group">
        <label for="post_author">Author</label>
        <input type="text" class="form-control" name="author" id="post_author" value="<%= post.author %>">
      </div>
        <div class="form-group">
        <label for="post_title">Summary</label>
        <input type="text" class="form-control" name="summary" id="post_summary" value="<%= post.summary %>">
      </div>
      <div class="form-group">
        <label for="post_body">Body</label>
        <textarea class="form-control" id="post_body" name="body" rows="3"><%= post.body %></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>