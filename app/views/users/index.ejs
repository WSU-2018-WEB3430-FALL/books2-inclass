<h2>Current Users
  <a class="btn btn-primary float-right" href="/users/new">Add a new user</a>
</h2>
<% for(let m in messages) { %>
    <div class="alert alert-<%= m %>" role="alert">
      <%= messages[m] %>
    </div>
<% } %>
<% if(locals.users){ %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Username</th>
        <th scope="col">Email</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>

  <% for(let u of users){ %>
    <tr>
      <th scope="row">1</th>
      <td><%= u.username %></td>
      <td><%= u.email %></td>
      <td><%= u.firstName %></td>
      <td><%= u.lastName %></td>
      <td><form action="/users/<%= u._id %>/delete" method="post">
        <a href="/users/<%= u._id %>/edit" class="btn btn-success">Edit</a>
  
        <button type="submit" class="btn btn-danger">Delete</button>
      </form></td>
    </tr>
    
  <% } %>
  </tbody>
</table>
<% } %>